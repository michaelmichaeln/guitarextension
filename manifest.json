{
    "manifest_version": 3,
    "name": "Guitar Extension",
    "version": "1.0",
    "description": "A Chrome extension for guitar-related functionality",
    
    "permissions": [
      "activeTab",
      "storage",
      "audio"

    ],
    
    "content_scripts": [{
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "css": ["src/styles.css"]
    }],
    
    "background": {
      "service_worker": "src/background.js"
    },
    
    "action": {
      "default_popup": "src/popup.html",
      "default_title": "Guitar Extension"
    },
    
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }